{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "codecs/*": [
        "codecs/*"
      ]
    }
  },
  "exclude": [
    "src/sw/**/*",
    "src/codecs/processor-worker/**/*",
    ".cache",
    "public",
    "node_modules"
  ]
}
